@model Sistema.Modelos.Mantenimiento

@{
    ViewData["Title"] = "Detalles del Mantenimiento";
}

<h1>Detalles del Mantenimiento</h1>

<div>
    <h4>Mantenimiento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoMantenimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoMantenimiento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Camion.Marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Camion.Marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Camion.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Camion.Modelo)
        </dd>
    </dl>
</div>

<h4>Mantenimientos Relacionados con este Camión</h4>

<table class="table">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Fecha de Mantenimiento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mantenimiento in ViewBag.MantenimientosRelacionados)
        {
            <tr>
                <td>@mantenimiento.TipoMantenimiento</td>
                <td>@mantenimiento.Fecha.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-controller="Mantenimientos" asp-route-id="@mantenimiento.Id">Ver Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a la Lista</a>
</div>
